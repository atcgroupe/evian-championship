{% extends 'core/core.html.twig' %}

{% block main %}
    <div
        class="
            max-w-screen-sm mx-auto
            mt-24
        "
    >
        <h1 class="text-2xl text-center p-4 border border-red-500 text-red-500 rounded-md">
            Etes-vous sure de vouloir supprimer<br>
            la livraison
            <span class="font-bold">{{ delivery.title }}</span> ?
        </h1>

        <form method="post" action="{{ path('delivery_delete', { id: delivery.id }) }}">
            <p class="text-center mt-6">
                {{ include('component/button/button.html.twig', {
                    href: path('delivery_index'),
                    label: 'Annuler',
                    class: 'mr-1'
                }) }}

                {{ include('component/button/button.html.twig', {
                    type: 'submit',
                    label: 'Supprimer',
                    style: 'danger'
                }) }}
            </p>
        </form>
    </div>
{% endblock %}
