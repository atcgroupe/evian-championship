{% extends 'core/core.html.twig' %}

{% block main %}
    <div class="max-w-screen-lg mx-auto">
        <h1 class="text-3xl text-gray-500 font-light text-center mt-2">Liste des produits</h1>

        <div class="mt-8">
            {% for product in products %}
                <div
                    class="
                        flex lg:justify-between items-center
                        flex-col lg:flex-row
                        border border-gray-300 hover:border-black
                        p-3
                        rounded-md
                        text-gray-500 hover:text-black
                        mt-3
                    "
                >
                    <div class="text-left">
                        <span class="font-bold">{{ product.name }}</span>
                        - {{ product.price }}€
                    </div>

                    <div class="flex justify-end items-center mt-3 lg:mt-0">
                        <div class="mr-3">
                            {% if product.isActive %}
                                <span class="text-green-500 border border-green-500 text-xs rounded-md px-2">
                                    ACTIF
                                </span>
                            {% else %}
                                <span class="text-red-500 border border-red-500 text-xs rounded-md px-2">
                                    DESACTIVE
                                </span>
                            {% endif %}
                        </div>

                        <div>
                            {{ include('component/button/button.html.twig', {
                                href: path('product_update', { id: product.id }),
                                size: 'small',
                                label: 'Modifier'
                            }) }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="text-center mt-6">
            {{ include('component/button/button.html.twig', {
                href: path('product_create'),
                label: 'Créer un nouveau produit',
                icon: 'fas fa-plus',
                iconClass: 'mr-2'
            }) }}
        </div>
    </div>
{% endblock %}
