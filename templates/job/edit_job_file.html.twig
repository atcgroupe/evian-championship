{% extends 'core/core.html.twig' %}

{% block main %}
    <div class="max-w-screen-sm mx-auto">
        <h1 class="text-2xl font-light text-center mb-8">
            Ajouter un fichier de production pour le job {{ job.customerReference }}
        </h1>

        {{ form_start(form, { attr: { 'novalidate': 'novalidate', 'class': 'max-w-screen-sm mx-auto' } }) }}
        {{ form_widget(form) }}

        <div class="grid gap-4 grid-cols-2 mt-8">
            {{ include('component/button/button.html.twig', {
                'href': path('job_view', { id: job.id }),
                'label': 'Annuler',
            }) }}

            {{ include('component/button/button.html.twig', {
                'label': 'Ajouter le fichier',
            }) }}
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
