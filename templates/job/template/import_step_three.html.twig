{% extends 'core/core.html.twig' %}

{% block main %}
    <div class="max-w-screen-sm mx-auto">
        {# Title #}
        <h1 class="text-3xl font-light text-center my-6">
            <span class="px-2 border border-prunoise rounded-md text-prunoise">Importer des Jobs</span>
        </h1>

        {# Steps #}
        <div class="mt-10 mx-3">
            <h2 class="text-xl text-prunoise text-center font-light">Etape 3: Rapport</h2>

            <div class="border-b border-prunoise mt-12"></div>

            <div class="flex justify-between items-center -mt-7">
                {# step 1 #}
                <div
                        class="
                        rounded-full
                        border border-prunoise
                        bg-white
                        shadow-md
                        text-prunoise
                        w-14 h-14
                        flex justify-center items-center
                        text-2xl
                    "
                >
                    <div>1</div>
                </div>

                {# step 2 #}
                <div
                        class="
                        rounded-full
                        border border-prunoise
                        bg-white
                        text-prunoise
                        shadow-md
                        w-14 h-14
                        flex justify-center items-center
                        text-2xl
                    "
                >
                    <div>2</div>
                </div>

                {# step 3 #}
                <div
                        class="
                    rounded-full
                    border border-prunoise
                    bg-prunoise
                    text-white
                    shadow-md
                    w-14 h-14
                    flex justify-center items-center
                    text-2xl
                "
                >
                    <div>3</div>
                </div>
            </div>
        </div>

        <div class="p-3 mt-6 bg-green-400 text-center text-white rounded-md">
            Nombre de jobs importés: {{ report.validJobsCount }}
        </div>

        <div class="text-center mt-6">
            {{ include('component/button/button.html.twig', {
                'href': path('job_index'),
                'label': 'Retour à la liste',
            }) }}
        </div>
    </div>
{% endblock %}
